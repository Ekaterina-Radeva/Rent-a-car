@model Rent_a_car.Models.RentalRequest

@{
    ViewData["Title"] = "Create";
}

<h2>Reserve a Car</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="CarId" />

    <div class="mb-3">
        <label class="form-label">Start Date</label>
        <input type="date" asp-for="StartDate" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">End Date</label>
        <input type="date" asp-for="EndDate" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Submit Reservation</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
